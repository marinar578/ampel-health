<div class="admin-view edit-user">
  <div class="padded"><a href="/admin">Back to admin page</a></div>
    <h2>Edit this admin account</h2>
    <%= bootstrap_form_for @user do |f| %>
      <p>
        <%= f.text_field :email, placeholder: current_user.email, value: current_user.email %>
      </p>
     
      <p>
        <%= f.text_field :password, placeholder: "edit password" %>
      </p>

      <p>
        <%= f.submit "Submit"%>
      </p>
    <% end %>
</div>